<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_130"
    android:layout_marginLeft="@dimen/dp_30">

    <ImageView

        android:id="@+id/iv_item_hotgoods"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_120" />

    <TextView
        android:id="@+id/tv_name_item_hotgoods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/iv_item_hotgoods" />

    <TextView
        android:id="@+id/tv_brif_item_hotgoods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_item_hotgoods"
        android:layout_toRightOf="@id/iv_item_hotgoods"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tv_price_item_hotgoods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_brif_item_hotgoods"
        android:layout_toRightOf="@id/iv_item_hotgoods"
        android:textColor="#D50000" />
</RelativeLayout>