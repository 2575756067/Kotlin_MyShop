<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_topic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name_item_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_item_topic"
            android:layout_marginTop="@dimen/dp_10"
            android:text="111" />

        <TextView
            android:id="@+id/tv_price_item_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_item_topic"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/tv_name_item_topic"
            android:text="111"
            android:textColor="#D50000" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_brig_item_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_item_topic"
        android:layout_marginTop="@dimen/dp_6"
        android:textSize="@dimen/sp_10" />
</LinearLayout>